<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TableLayout
                android:layout_width="match_parent"
                android:dividerPadding="10dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_fields"
                    android:gravity="center"
                    android:text="Cedula/RUC"
                    android:textColor="@color/textColorPrimary"
                    android:layout_weight="1" />
                <EditText
                    android:id="@+id/cliente_cedula"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    style="@style/login_edit_text"
                    android:layout_weight="4"
                    android:hint="Cedula/RUC"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:background="@drawable/text_field"/>
            </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip">
                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/header_fields"
                        android:gravity="center"
                        android:text="Nombres/Apellidos"
                        android:textColor="@color/textColorPrimary"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/cliente_nombres"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        style="@style/login_edit_text"
                        android:layout_weight="4"
                        android:hint="Nombres y Apellidos"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@drawable/text_field"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/header_fields"
                        android:gravity="center"
                        android:text="N.Comercial"
                        android:textColor="@color/textColorPrimary"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/cliente_comercial"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        style="@style/login_edit_text"
                        android:layout_weight="4"
                        android:hint="Nombre Comercial"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@drawable/text_field"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/header_fields"
                        android:gravity="center"
                        android:text="Direccion"
                        android:textColor="@color/textColorPrimary"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/cliente_direccion"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        style="@style/login_edit_text"
                        android:layout_weight="4"
                        android:hint="Direccion"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@drawable/text_field"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/header_fields"
                        android:gravity="center"
                        android:text="Telefono"
                        android:textColor="@color/textColorPrimary"
                        android:layout_weight="1" />
                    <EditText
                        android:id="@+id/cliente_telefono"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        style="@style/login_edit_text"
                        android:layout_weight="4"
                        android:hint="Telefono"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@drawable/text_field"/>
                </TableRow>
            </TableLayout>
            </LinearLayout>

        </LinearLayout>
            </LinearLayout>
