<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ibzssoft.com.ishidamovile.ReporteExistencia"
    tools:showIn="@layout/activity_existencia"
    android:background="@color/dividerColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/dividerColor">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            card_view:cardCornerRadius="8dp">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/formItemTxt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Existencia en Bodega"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TableLayout
                    android:layout_below="@+id/formItemTxt7"
                    android:layout_width="match_parent"
                    android:dividerPadding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/contenidoCabecera">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Codigo"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoExiCodigo"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:lines="1"
                            android:hint="Codigo del Producto"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Cod.Alterno"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoExiAlterno"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:hint="Codigo Alternativo"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Descripcion"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoExiDescripcion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:maxEms="5"
                            android:ems="5"
                            android:hint="Descripcion del producto"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Presentacion"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoExiPresentacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:hint="Presentacion del producto"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:maxEms="5"
                            android:ems="5"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Unidad"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoExiUnidad"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:hint="Unidad de venta"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:maxLines="1"
                            />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_below="@+id/contenidoCabecera"
                    android:id="@+id/infoExiTableLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="#"
                            android:layout_marginLeft="1dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_span="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/header_fields"
                            android:text="Bodega"
                            android:layout_span="5"

                            ></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Total"
                            android:layout_marginLeft="1dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_span="1"/>
                    </TableRow>

                </TableLayout>
                <!--Totales-->
                <RelativeLayout
                    android:layout_below="@+id/infoExiTableLayout"
                    android:padding="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <TableLayout
                        android:layout_width="120dp"
                        android:paddingTop="5dp"
                        android:dividerPadding="5dp"
                        android:layout_height="wrap_content">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/col1"
                                android:layout_margin="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:textAppearanceLarge"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="18dp"
                                android:gravity="right"
                                android:text="TOTAL: "
                                android:textStyle="bold"
                                android:layout_weight="1" />
                            <TextView
                                android:id="@+id/infoExiTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:hint="0.0"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorAccent"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
