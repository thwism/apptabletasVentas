<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <!--Detalle del Item-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TableLayout
                android:id="@+id/tableInfoClient"
                android:layout_below="@+id/formItemTxt3"
                android:layout_width="match_parent"
                android:dividerPadding="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="Producto"
                        android:background="@drawable/header_fields"
                        android:textColor="@color/textColorPrimary"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteItem"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        style="@style/login_edit_text"
                        android:hint="Codigo o Descripcion del producto"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:dropDownWidth="320dp"
                        android:background="@drawable/text_field"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:text="Codigo:"
                        android:paddingLeft="16dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/codItem"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:padding="10dp"
                        android:ems="15"
                        android:maxEms="15"
                        android:textColor="@color/textColorPrimary"
                        android:hint="Codigo del Producto"

                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:text="Descripcion:"
                        android:paddingLeft="16dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/descItem"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:padding="10dp"
                        android:maxEms="1"
                        android:textColor="@color/textColorPrimary"
                        android:hint="Descripcion del producto"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:text="Presentacion:"
                        android:paddingLeft="16dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/preItem"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:padding="10dp"
                        android:maxEms="1"
                        android:textColor="@color/textColorPrimary"
                        android:hint="Presentacion del producto"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:text="Precio:"
                        android:paddingLeft="16dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/puItem"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:padding="10dp"
                        android:ems="15"
                        android:maxEms="15"
                        android:textColor="@color/textColorPrimary"
                        android:hint="Precio de venta"
                        android:text="0.0"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:text="Precio Real:"
                        android:paddingLeft="16dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/prItem"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:padding="10dp"
                        android:ems="15"
                        android:maxEms="15"
                        android:text="0.0"
                        android:textColor="@color/textColorPrimary"
                        android:hint="Precio Real"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:text="Cantidad:"
                        android:paddingLeft="16dp"
                        android:layout_weight="1" />
                    <EditText
                        android:enabled="false"
                        android:id="@+id/canItem"
                        android:layout_margin="2dp"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        style="@style/login_edit_text"
                        android:hint="Cantidad"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:dropDownWidth="320dp"
                        android:background="@drawable/text_field"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:text="Porc. Desc:"
                        android:paddingLeft="16dp"
                        android:layout_weight="1" />

                    <EditText
                        android:enabled="false"
                        android:id="@+id/porcItem"
                        android:layout_margin="2dp"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        style="@style/login_edit_text"
                        android:hint="Porcentaje Descuento"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:dropDownWidth="320dp"
                        android:background="@drawable/text_field"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:text="Descuento:"
                        android:paddingLeft="16dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/dscItem"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:padding="10dp"
                        android:text="0.0"
                        android:textColor="@color/textColorPrimary"
                        android:hint="Valor Descuento"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:text="Subtotal:"
                        android:paddingLeft="16dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/subItem"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:padding="10dp"
                        android:text="0.0"
                        android:textColor="@color/textColorPrimary"
                        android:hint="Subtotal del Item"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        </LinearLayout>
</ScrollView>