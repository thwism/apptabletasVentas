<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="2dp"
            android:background="@drawable/cardview_controls">
            <TextView
                android:id="@+id/cliente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:enabled="false"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:background="#757575"
                android:textSize="10dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/transaccion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:layout_weight="2.4"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:background="#757575"
                android:textSize="10dp" />



            <TextView
                android:id="@+id/emision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:enabled="false"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/plazo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:enabled="false"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:background="#757575"
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/vencimiento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="2.5"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/valor_factura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="2.8"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:background="#757575"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/valor_cancelado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="2.8"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/saldo_vencer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="2.8"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:background="#757575"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/saldo_vencido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="2.8"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dias_vencidos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.9"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:ems="10"
                android:enabled="false"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:background="@color/lightColorPrimary"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                />
        <TextView
            android:id="@+id/cheques"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:enabled="false"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/header_fields"
            android:textSize="12dp"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>
