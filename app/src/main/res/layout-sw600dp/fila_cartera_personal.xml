<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/cliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="2.0"
            android:background="#757575"
            android:enabled="false"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textSize="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/transaccion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:background="@drawable/header_fields"
            android:enabled="false"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/emision"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/plazo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:background="@drawable/header_fields"
            android:enabled="false"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/vencimiento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="2.5"
            android:enabled="false"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/valor_factura"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:background="@drawable/header_fields"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/valor_cancelado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/saldo_vencer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:background="@drawable/header_fields"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/saldo_vencido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/dias_vencidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.9"
            android:background="@drawable/header_fields"
            android:ems="10"
            android:enabled="false"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/cheques"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.9"
            android:enabled="false"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dp"

            />
    </LinearLayout>
</android.support.v7.widget.CardView>