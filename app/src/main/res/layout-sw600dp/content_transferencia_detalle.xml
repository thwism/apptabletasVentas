<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".transbodega.visualizar.TransferenciaDetalle"
    tools:showIn="@layout/activity_transferencia_detalle"
    android:background="@color/dividerColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <!--Campo detalle transaccion-->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="4dp"
            >
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/formItemTxt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Detalle de la transaccion"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TableLayout
                    android:layout_below="@+id/formItemTxt1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="10dp"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="5dip"
                        android:layout_weight="1">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Emision"
                            android:layout_weight="1" />
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Hora"
                            android:layout_weight="1" />
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Bodega"
                            android:visibility="gone"
                            android:layout_weight="1" />
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Transaccion"
                            android:layout_weight="1" />
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Precio"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Responsable"
                            android:layout_weight="1" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="001"
                            android:id="@+id/infoTransFE"
                            android:textColor="@color/textColorPrimary"
                            android:gravity="center"
                            android:layout_weight="1" />
                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="001"
                            android:id="@+id/infoTransHE"
                            android:textColor="@color/textColorPrimary"
                            android:gravity="center"
                            android:layout_weight="1" />
                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="001"
                            android:visibility="gone"
                            android:id="@+id/infoTransBodega"
                            android:textColor="@color/textColorPrimary"
                            android:gravity="center"
                            android:layout_weight="1" />
                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="codTrans"
                            android:textColor="@color/textColorPrimary"
                            android:id="@+id/infoTransTrans"

                            android:gravity="center"
                            android:layout_weight="1" />


                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="empty"
                            android:id="@+id/infoTransPrecio"

                            android:gravity="center"
                            android:textColor="@color/textColorPrimary"
                            android:layout_weight="1" />
                        <TextView android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/infoTransVendedor"
                            android:text="edu"
                            android:textColor="@color/textColorPrimary"
                            android:layout_weight="1" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="4dp">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/formItemTxt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Bodegas"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TableLayout
                    android:layout_below="@+id/formItemTxt3"
                    android:layout_width="match_parent"
                    android:dividerPadding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Origen"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoTransOrigen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:lines="2"
                            android:ems="5"
                            android:maxEms="5"
                            android:hint="Bodega Origen.."
                            android:text="@string/texto_largo"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Destino"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoTransDestino"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:ems="5"
                            android:maxEms="5"
                            android:padding="10dp"
                            android:maxLines="2"
                            android:hint="Bodega Destino"
                            android:text="@string/texto_largo"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>

                </TableLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/infoTransObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="4dp"
            android:visibility="gone">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/formItemTxt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Observaciones"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TableLayout
                    android:layout_below="@+id/formItemTxt5"
                    android:layout_width="match_parent"
                    android:dividerPadding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Observacion"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoTransObs"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:hint="Observacion"
                            android:textColor="@color/textColorPrimary"
                            android:padding="10dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>

                </TableLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="8dp">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/formItemTxt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Listado de Items"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TableLayout
                    android:layout_below="@+id/formItemTxt7"
                    android:id="@+id/infoTransTableLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="#"
                            android:layout_marginLeft="1dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_span="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/header_fields"
                            android:text="Descripcion"
                            android:layout_span="5"

                            ></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/header_fields"
                            android:text="Cantidad"
                            android:layout_span="1"></TextView>

                    </TableRow>

                </TableLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!--Estado de la transaccion-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="12dp"
                    android:layout_marginBottom="10dp"
            >
                    <RelativeLayout
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/formItemTxt84"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/line"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_alignTop="@+id/thumbnail"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:text="Estado"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <TextView
                            android:id="@+id/infoTransEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:paddingTop="5dp"
                            android:layout_below="@id/formItemTxt84"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:layout_marginTop="1dip"
                            android:textColor="@color/textColorSecondary"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:text="Sin Enviar" />

                        <TextView
                            android:id="@+id/formItemTxt84t"
                            android:layout_below="@+id/infoTransEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/line"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_alignTop="@+id/thumbnail"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:text="Referencia"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <TextView
                            android:id="@+id/infoTransReferencia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:paddingTop="5dp"
                            android:layout_below="@id/formItemTxt84t"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:layout_marginTop="1dip"
                            android:textColor="@color/colorAccent"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:text="Sin Referencia" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="12dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/formItemTxt34"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/line"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_alignTop="@+id/thumbnail"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:text="Ult. Modificacion"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <TextView
                            android:id="@+id/infoTransFM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:paddingTop="5dp"
                            android:layout_below="@id/formItemTxt34"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:layout_marginTop="1dip"
                            android:textColor="@color/textColorPrimary"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:text="Sin definir" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
