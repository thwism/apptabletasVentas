<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/transaccion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:layout_weight="2.4"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/header_fields"
                android:textColor="@color/textColorPrimary"
                android:textSize="14dp"
                android:text="Transaccion"/>

            <TextView
                android:id="@+id/emision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="14dp"
                android:text="dd-MM-yyyy"/>

            <TextView
                android:id="@+id/vencimiento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/header_fields"
                android:textColor="@color/textColorPrimary"
                android:textSize="14dp"
                android:text="dd-MM-yyyy"/>

            <TextView
                android:id="@+id/saldo_vencer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:textSize="14dp"
                android:text="0.0"/>

            <TextView
                android:id="@+id/saldo_vencido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:background="@drawable/header_fields"
                android:textSize="14dp"
                android:text="0.0"/>

            <TextView
                android:id="@+id/dias_vencidos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:ems="10"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:text="0"/>
            <TextView
                android:id="@+id/cheques"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:ems="10"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="14dp"
                android:background="@drawable/header_fields"
                android:text="0"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>

