<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/textColorPrimary"
                        android:gravity="right"
                        android:textStyle="bold"

                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Codigo:"/>
                    <TextView
                        android:id="@+id/info_item_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:textColorHint="@color/textColorSecondary"
                        android:text="RTALS884"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:text="Descripcion: "
                        android:gravity="right"
                        android:textAppearance="?android:attr/textAppearanceSmall" />


                    <TextView
                        android:id="@+id/info_item_nombre"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:inputType="textMultiLine"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:minLines="1"
                        android:maxEms="15"
                        android:ems="15"
                        android:text="TELA POLAR DOBLE FAZ xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                        android:textColorHint="@color/textColorSecondary"
                        android:textAppearance="?android:attr/textAppearanceSmall" />


                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:text="Presentacion: "
                        android:gravity="right"
                        android:textAppearance="?android:attr/textAppearanceSmall" />


                    <TextView
                        android:id="@+id/info_item_presentacion"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:paddingLeft="5dp"
                        android:padding="5dp"
                        android:paddingRight="10dp"
                        android:maxEms="15"
                        android:ems="15"
                        android:gravity="clip_vertical"
                        android:text="CAJA X 12 ROLLOS"
                        android:textColorHint="@color/textColorSecondary"
                        android:textAppearance="?android:attr/textAppearanceSmall" />


                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:text="Unidad: "
                        android:gravity="right"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/info_item_unidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:text="ROLLO"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/textColorSecondary"/>
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:text="IVA: "
                        android:gravity="right"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/info_item_iva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:text="SI"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/textColorSecondary"/>
                </TableRow>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:text="Precio Uni.: "
                        android:gravity="right"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/info_item_precio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:text="0.00"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/textColorSecondary"/>
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:text="Precio Real: "
                        android:gravity="right"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/info_item_precio_real"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:text="0.00"
                        android:textColorHint="@color/textColorSecondary"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:text="Cantidad:"
                        android:gravity="right"
                        android:textColor="@color/textColorPrimary"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/info_item_cantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:text="0"
                        android:textColorHint="@color/textColorSecondary"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:text="Porc.Desc:"
                        android:gravity="right"
                        android:textColor="@color/textColorPrimary"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/info_item_porcentaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:text="0.00"
                        android:textColorHint="@color/textColorSecondary"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:text="Descuento:"
                        android:gravity="right"
                        android:textColor="@color/textColorPrimary"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                    <TextView
                        android:id="@+id/info_item_descuento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:text="0.00"
                        android:textColorHint="@color/textColorSecondary"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/nuevoPedidoCorreo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="TOTAL:"
                        android:gravity="right"
                        android:textColor="@color/textColorPrimary"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/info_item_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="4"
                        android:text="0.00"
                        android:textColorHint="@color/textColorSecondary"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="EXISTENCIAS"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:textColor="@color/textColorPrimary"
                android:background="@drawable/line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <TableLayout
                    android:layout_below="@+id/contenidoCabecera"
                    android:id="@+id/infoExiTableLayoutProm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="#"
                            android:textColor="@color/textColorPrimary"
                            android:layout_marginLeft="1dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_span="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="1dp"
                            android:text="Bodega"
                            android:textColor="@color/textColorPrimary"
                            android:layout_span="1"

                            ></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Total"
                            android:textColor="@color/textColorPrimary"
                            android:layout_marginLeft="1dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_span="1"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>