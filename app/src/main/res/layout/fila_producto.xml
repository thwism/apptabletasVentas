<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="?attr/selectableItemBackground"
    android:padding="5dip">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

        <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dip"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_normal"
            android:gravity="center">
            <ImageView
                android:id="@+id/filaProductoIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_price"
            />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/filaProductoTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textSize="12dip"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Descripcion: "
        android:textAppearance="?android:attr/textAppearanceSmall"/>
    <TextView
        android:id="@+id/filaProductoDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:maxLines="1"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/filaProductoTxt1"
        android:textColor="#343434"
        android:text="item"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/filaProductoTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_below="@id/filaProductoTxt1"
        android:textSize="12dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Codigo:" />
    <TextView
        android:id="@+id/filaProductoCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/filaProductoTxt2"
        android:layout_below="@+id/filaProductoTxt1"
        android:textColor="#343434"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"/>


    <TextView
        android:id="@+id/filaProductoTxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filaProductoTxt2"
        android:textSize="12dip"
        android:padding="3dp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Codigo Alterno:" />
    <TextView
        android:id="@+id/filaProductoCodAlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/filaProductoTxt3"
        android:layout_below="@+id/filaProductoTxt2"
        android:text=""
        android:textColor="#343434"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
    <TextView
        android:id="@+id/filaProductoTxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filaProductoTxt3"
        android:textSize="12dip"
        android:padding="3dp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Presentacion:" />
    <TextView
        android:id="@+id/filaProductoPresent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:maxLines="1"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/filaProductoTxt4"
        android:layout_below="@+id/filaProductoTxt3"
        android:text="unidades"
        android:textColor="#343434"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:layout_below="@+id/filaProductoTxt4"
        android:id="@+id/filaProductoModificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:gravity="right"
        android:text="modificacion"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="15dip"
        android:textSize="10dip"
        android:textStyle="bold" />
    <!--<ImageButton
        android:id="@+id/filaProductoMenu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/filaProductoTxt1"
        android:gravity="right"/>-->
</RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
