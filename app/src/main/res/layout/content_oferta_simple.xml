<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/category_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:hint="@string/placeholder_buscar_nombre_cliente"/>

        <LinearLayout
            android:id="@+id/container_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp">
                        <ImageView
                            android:id="@+id/list_avatar"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_boy_24_dp" />

                        <TextView
                            android:id="@+id/lbl1"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:text="@string/placeholder_cliente"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/nombres"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl1"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:textColor="@color/textColorSecondary"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/placeholder_nombre_apellido"
                            android:textAllCaps="true"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/lbl2"
                            android:layout_below="@+id/nombres"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:text="@string/placeholder_nombre_comercial"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/comercial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl2"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:textColor="@color/textColorSecondary"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/placeholder_nombre_comercial"
                            android:textAllCaps="true"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="14sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/lbl3"
                            android:layout_below="@+id/comercial"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:text="@string/placeholder_cedula_ruc"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/cedula"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl3"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:textColor="@color/textColorSecondary"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/placeholder_cedula_ruc"
                            android:textAllCaps="true"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="14sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/lbl4"
                            android:layout_below="@+id/cedula"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:text="@string/direccion"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/direccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl4"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:textColor="@color/textColorSecondary"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/placeholder_direccion"
                            android:textAllCaps="true"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="14sp"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/lbl5"
                            android:layout_below="@+id/direccion"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:text="@string/placeholder_telefono"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/telefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl5"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:textColor="@color/textColorSecondary"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/placeholder_telefono"
                            android:textAllCaps="true"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="14sp"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/lbl6"
                            android:layout_below="@+id/telefono"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:text="@string/placeholder_observacion"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/observacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lbl6"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/list_avatar"
                            android:textColor="@color/textColorSecondary"
                            android:ellipsize="end"
                            android:text="@string/placeholder_observacion"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="14sp"
                            android:visibility="gone"/>
                        <Button
                            android:id="@+id/show_more_cliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/ver_mas"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:background="?attr/selectableItemBackground"
                            android:textSize="13dip"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
        </LinearLayout>

        <!--Contenedor de cartera-->
        <LinearLayout
            android:id="@+id/container_cartera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp">
                    <ImageView
                        android:id="@+id/list_cartera"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_bag_24_dp" />

                    <TextView
                        android:id="@+id/lbl7"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/list_cartera"
                        android:text="@string/placeholder_cartera"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/estado_cartera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl7"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/list_cartera"
                        android:textColor="@color/textColorSecondary"
                        android:ellipsize="end"
                        android:text="@string/placeholder_cliente_sin_cartera"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/show_more_cartera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/ver_mas"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="13dip"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!-- Ingreso de Items -->
        <LinearLayout
            android:id="@+id/container_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp">
                    <ImageView
                        android:id="@+id/list_item"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_edit_24_dp" />

                    <TextView
                        android:id="@+id/lbl8"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/list_item"
                        android:text="@string/placeholder_agregar_item"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl8"
                        android:layout_toRightOf="@+id/list_item"
                        android:orientation="horizontal"
                        android:layout_marginLeft="16dp">
                        <EditText
                            android:id="@+id/busqueda_producto"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="@android:color/darker_gray"
                            android:hint="@string/placeholder_buscar_item"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/lbl8"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/busqueda_producto"
                            android:hint="@string/cantidad"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="@android:color/darker_gray"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_weight="2"/>

                    </LinearLayout>


                    <Button
                        android:id="@+id/show_action_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/agregar"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="13dip"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <!--Items Ingresados -->
        <!-- Ingreso de Items -->
        <LinearLayout
            android:id="@+id/container_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/windowBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="@drawable/line">
                <ImageView
                    android:id="@+id/list_items"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_list_24_dp" />

                <TextView
                    android:id="@+id/lbl9"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/list_items"
                    android:text="@string/placeholder_items_ingresados"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl9"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/list_items"
                    android:textColor="@color/textColorSecondary"
                    android:ellipsize="end"
                    android:text="@string/texto_largo"
                    android:textAllCaps="true"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>