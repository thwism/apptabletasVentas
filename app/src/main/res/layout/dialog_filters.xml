<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/base_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/FILTER"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">


        <TextView
            android:id="@+id/list_item_filter_select_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:text="Etiqueta 1"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/list_item_filter_select_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector_black_baseline"
            android:focusable="false"
            android:gravity="start"
            android:paddingEnd="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:paddingStart="6dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/list_item_filter_select_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:text="Etiqueta 2"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/list_item_filter_select_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector_black_baseline"
            android:focusable="false"
            android:gravity="start"
            android:paddingEnd="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:paddingStart="6dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/list_item_filter_select_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:text="Etiqueta 3"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/list_item_filter_select_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector_black_baseline"
            android:focusable="false"
            android:gravity="start"
            android:paddingEnd="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:paddingStart="6dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/list_item_filter_select_title_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:text="Etiqueta 4"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/list_item_filter_select_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector_black_baseline"
            android:focusable="false"
            android:gravity="start"
            android:paddingEnd="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:paddingStart="6dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/list_item_filter_select_title_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:text="Etiqueta 5"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/list_item_filter_select_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector_black_baseline"
            android:focusable="false"
            android:gravity="start"
            android:paddingEnd="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:paddingStart="6dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/list_item_filter_select_title_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:text="Etiqueta 6"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/list_item_filter_select_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector_black_baseline"
            android:focusable="false"
            android:gravity="start"
            android:paddingEnd="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:paddingStart="6dp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llButtons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/filter_btn_cancel"
            style="@style/buttonSecondaryStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/Clear"/>

        <View
            android:layout_width="@dimen/base_margin_horizontal"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/filter_btn_apply"
            style="@style/buttonPrimaryStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/Apply"/>
    </LinearLayout>
</LinearLayout>