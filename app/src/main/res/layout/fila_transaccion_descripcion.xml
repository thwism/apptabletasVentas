<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

    <LinearLayout android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dip"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip">

            <LinearLayout
                android:id="@+id/filaTransaccionCircle"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/filaTransaccionIcon"
                    android:layout_width="50dp"
                    android:src="@drawable/receipt"
                    android:layout_height="50dp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/filaClienteTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="12dip"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="NÂº.Trans: "
            android:textAllCaps="true"
            android:textColor="@color/textColorSecondary"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:id="@+id/filaTransaccionNro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/filaClienteTxt1"
            android:textColor="@color/textColorPrimary"
            android:text="5"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/filaClienteTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAllCaps="true"
            android:layout_below="@id/filaClienteTxt1"
            android:textSize="12dip"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Cliente:"
            android:textColor="@color/textColorSecondary"/>
        <TextView
            android:id="@+id/filaTransaccionCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/filaClienteTxt2"
            android:layout_below="@+id/filaClienteTxt1"
            android:textColor="@color/textColorPrimary"
            android:text="Ricardo"
            android:textAllCaps="true"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"/>


        <TextView
            android:id="@+id/filaClienteTxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filaClienteTxt2"
            android:textSize="12dip"
            android:padding="2dp"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Fecha:"
            android:textAllCaps="true"
            android:textColor="@color/textColorSecondary"/>
        <TextView
            android:id="@+id/filaTransaccionFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/filaClienteTxt3"
            android:layout_below="@+id/filaClienteTxt2"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/filaTransaccionEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:textAllCaps="true"
            android:text="NO ENVIADO"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="15dip"
            android:textSize="14dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filaClienteTxt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filaClienteTxt3"
            android:textSize="12dip"
            android:padding="3dp"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Transaccion:"
            android:textColor="@color/textColorSecondary"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/filaTransaccionTipoTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/filaClienteTxt4"
            android:layout_below="@+id/filaClienteTxt3"
            android:text="codTrans"
            android:textAllCaps="true"
            android:visibility="gone"
            android:textColor="@color/textColorPrimary"
            />
        <TextView
            android:id="@+id/filaTransaccionModificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/filaTransaccionEstado"
            android:gravity="right"
            android:text="modificacion"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="25dip"
            android:textSize="14dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filaTransaccionEstadoT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/filaTransaccionNro"
            android:gravity="center_horizontal"
            android:textColor="@color/successfull"
            android:layout_marginRight="30dip"
            android:textSize="14dp"
            android:text="EST: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:id="@+id/filaTransaccionReferencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/filaTransaccionEstadoT"
            android:gravity="right"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="15dip"
            android:textSize="14dp"
            android:text="Doc. Ref: 000"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
