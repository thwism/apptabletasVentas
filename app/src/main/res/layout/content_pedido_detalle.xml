<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".pedido.visualizar.PedidoDetalle"
    tools:showIn="@layout/activity_pedido_detalle"
    android:background="@color/dividerColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <!--Campo fecha emision-->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="12dp">
            <RelativeLayout
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView  android:id="@+id/infoTransTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Emision"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TableLayout
                    android:layout_below="@+id/infoTransTittle"
                    android:layout_width="match_parent"
                    android:dividerPadding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="Fecha"
                            android:background="@drawable/header_fields"
                            android:layout_weight="1"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                        <TextView
                            android:id="@+id/infoTransFE"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:hint="Fecha"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            style="@style/login_edit_text"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="Hora"
                            android:background="@drawable/header_fields"
                            android:layout_weight="1"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                        <TextView
                            android:id="@+id/infoTransHE"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:hint="Hora"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            style="@style/login_edit_text"/>
                    </TableRow>
                </TableLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <!--Campo detalle transaccion-->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="4dp"
            >
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/formItemTxt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Detalle de la transaccion"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TableLayout
                    android:layout_below="@+id/formItemTxt1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:dividerPadding="10dp"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="5dip"
                        android:layout_weight="1">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Bodega"
                            android:layout_weight="1" />
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Transaccion"
                            android:layout_weight="1" />
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Precio"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Vendedor"
                            android:layout_weight="1" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="001"
                            android:id="@+id/infoTransBodega"
                            android:textColor="@color/textColorPrimary"
                            android:gravity="center"
                            android:layout_weight="1" />
                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="codTrans"
                            android:textColor="@color/textColorPrimary"
                            android:id="@+id/infoTransTrans"

                            android:gravity="center"
                            android:layout_weight="1" />


                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="empty"
                            android:id="@+id/infoTransPrecio"

                            android:gravity="center"
                            android:textColor="@color/textColorPrimary"
                            android:layout_weight="1" />
                        <TextView android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/infoTransVendedor"
                            android:text="edu"
                            android:textColor="@color/textColorPrimary"
                            android:layout_weight="1" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="4dp">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/formItemTxt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Informacion del Cliente"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TableLayout
                    android:layout_below="@+id/formItemTxt3"
                    android:layout_width="match_parent"
                    android:dividerPadding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Cedula/RUC"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoTransCedula"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:lines="1"
                            android:hint="Cedula/RUC.."
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Nombres"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoTransNombres"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:hint="Nombres y Apellidos"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Razon Social"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoTransAlterno"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:hint="Razon Social"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Direccion"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoTransDireccion"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:maxLines="1"
                            android:hint="Direccion"
                            android:padding="10dp"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:id="@+id/infoTransRowTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Telefono"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/infoTransTelefono"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:hint="Telefono"
                            android:padding="10dp"
                            android:textColor="@color/textColorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:id="@+id/infoTransRowCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Correo"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/infoTransCorreo"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:textColor="@color/textColorPrimary"
                            android:hint="Correro Electronico"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:id="@+id/infoTransRowObs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Observacion"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/infoTransObservation"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:padding="10dp"
                            android:textColor="@color/textColorPrimary"
                            android:hint="Observaciones"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/infoTransObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="4dp"
            android:visibility="gone">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/formItemTxt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Observaciones"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TableLayout
                    android:layout_below="@+id/formItemTxt5"
                    android:layout_width="match_parent"
                    android:dividerPadding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Solicitante"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoTransSolicitante"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:hint="Solicitante"
                            android:textColor="@color/textColorPrimary"
                            android:padding="10dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dip">
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/header_fields"
                            android:gravity="center"
                            android:text="Observacion"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/infoTransObs"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:hint="Observacion"
                            android:textColor="@color/textColorPrimary"
                            android:padding="10dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </TableRow>

                </TableLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="8dp">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/formItemTxt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/line"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Listado de Items"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TableLayout
                    android:layout_below="@+id/formItemTxt7"
                    android:id="@+id/infoTransTableLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="#"
                            android:layout_marginLeft="1dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_span="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/header_fields"
                            android:text="Descripcion"
                            android:layout_span="5"

                            ></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/header_fields"
                            android:text="Cant"
                            android:layout_span="1"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/header_fields"
                            android:text="P.U"
                            android:layout_span="1"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Desc.%"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginLeft="1dp"
                            android:layout_span="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="@drawable/header_fields"
                            android:text="Total"
                            android:layout_marginLeft="1dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_span="1"/>
                    </TableRow>

                </TableLayout>
                <!--Totales-->
                <RelativeLayout
                    android:layout_below="@+id/infoTransTableLayout"
                    android:padding="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <LinearLayout
                        android:layout_below="@+id/nuevoPedidoContenedorTabla"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="right"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SUBTOTAL CON IVA: "
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/infoTransSub12"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right|center"
                                android:text=" 0.0000"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="right"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SUBTOTAL SIN IVA: "
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/infoTransSub0"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right|center"
                                android:text=" 0.00"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="right"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SUBTOTAL: "
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/infoTransSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right|center"
                                android:text=" 0.00"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="right"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IVA: "
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/infoTransIVA"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right|center"
                                android:text=" 0.00"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp" />
                        </LinearLayout>
                        <!--suma total de la transaccion-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
