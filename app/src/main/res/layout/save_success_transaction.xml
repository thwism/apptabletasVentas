<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:id="@+id/custom_toast_layout_id3"
    android:orientation="horizontal" android:padding="10dp"
    android:layout_height="wrap_content" android:background="#A5D6A7">
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_info"
        android:gravity="center">
        <ImageView
            android:id="@+id/filaProductoIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/save"
            />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
        android:id="@+id/linearLayout1" android:orientation="vertical"
        android:layout_height="wrap_content" android:paddingLeft="15dp">
        <TextView android:layout_height="wrap_content" android:id="@+id/toast_tittle"
            android:textStyle="bold"
            android:layout_width="wrap_content" android:textColor="#1B5E20" android:textAllCaps="true"
            android:textSize="18dp" android:text="Titulo"
            android:textAppearance="?android:attr/textAppearanceLarge">

        </TextView>
        <TextView android:id="@+id/toast_subtittle" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#1B5E20"
            android:textSize="15dp" android:text="Subtitulo"></TextView>
    </LinearLayout>

</LinearLayout>