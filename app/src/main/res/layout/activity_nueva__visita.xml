<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/coordinator"
    tools:context=".NuevaVisita">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_nueva_visita" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="295dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_plus"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/fab_add"
        android:visibility="gone"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="225dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_edit"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/fab_edit"
        android:visibility="gone"
        app:fabSize="mini"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_remove"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="155dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_del"
        app:backgroundTint="@color/fab_del"
        app:pressedTranslationZ="12dp"
        android:visibility="gone"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_show"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_idea"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/fab_show"
        android:visibility="gone"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_save"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="90dp"
        android:src="@drawable/save"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/fab_save"
        android:visibility="gone"
        app:fabSize="mini"
        />

</android.support.design.widget.CoordinatorLayout>
