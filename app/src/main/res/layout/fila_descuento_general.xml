<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:cardCornerRadius="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/cliente_descuento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:maxLines="1"
                android:enabled="false"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:background="@drawable/header_fields"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:text="Cliente Razon/Social"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />


            <TextView
                android:id="@+id/producto_descuento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:layout_weight="2.0"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:background="@color/windowBackground"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:text="Descripcion del producto"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>


            <TextView
                android:id="@+id/porcentaje_descuento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:ems="12"
                android:enabled="false"
                android:gravity="center"
                android:singleLine="true"
                android:background="@color/lightColorPrimary"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
