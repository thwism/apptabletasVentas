                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/nuevoPedidoVendedor"
                            android:text="edu"
                            android:textColor="@color/textColorSecondary"
                            android:layout_weight="1" />
                    </TableRow>
