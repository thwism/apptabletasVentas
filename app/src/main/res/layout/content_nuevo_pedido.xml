                            android:paddingLeft="16dp"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/nuevoPedidoNombreAlt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
