<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="10dp"
    android:foreground="?attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/cliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/header_fields"
            android:textSize="12dp"
            android:text="Nombre del Cliente"
            />


        <TextView
            android:id="@+id/transaccion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Transacccion"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dip"/>

        <TextView
            android:id="@+id/emision"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_fields"
            android:layout_weight="2.7"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="2000-01-01"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/plazo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dip"
            />

        <TextView
            android:id="@+id/vencimiento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_fields"
            android:layout_weight="2.7"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="2000-01-01"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dip"
            />

        <TextView
            android:id="@+id/valor_factura"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="0.0"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dip"
            />

        <TextView
            android:id="@+id/valor_cancelado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_fields"
            android:layout_weight="2.7"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="0.0"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dip"/>

        <TextView
            android:id="@+id/saldo_vencer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="0.0"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/saldo_vencido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_fields"
            android:layout_weight="2.7"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="0.0"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dip" />



        <TextView
            android:id="@+id/dias_vencidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="12dip"
            />
        <TextView
            android:id="@+id/cheques"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_fields"
            android:layout_weight="2.8"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/textColorPrimary"
            android:textSize="12dip" />
    </LinearLayout>
</android.support.v7.widget.CardView>
